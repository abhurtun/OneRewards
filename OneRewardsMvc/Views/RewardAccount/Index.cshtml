@model IEnumerable<OneRewardsMvc.Models.RewardAccount>

@{
    ViewBag.Title = "Index";
}

<h2>RewardAccounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
            <th>
            @Html.DisplayNameFor(model => model.RewardAccountID)
        </th>
        <th></th>
        <th>
            @Html.DisplayName("LastPointsCollected")
        </th>
        <th></th>
        <th>
            @Html.DisplayName("TotalPointsCollected")
        </th>
        <th></th>
                <th>
                 @Html.DisplayNameFor(model => model.Company.CompanyName)
        </th>
        <th></th>
                        <th>
                 @Html.DisplayNameFor(model => model.Company.CompanyLogo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Where(i => i.UserName.Equals(User.Identity.Name)))
{
    <tr>
            <td>
            @Html.DisplayFor(modelItem => item.RewardAccountID)
        </td>
        <td></td>
        <td>
            @Html.DisplayFor(modelItem => item.Points)
        </td>
        <td></td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPoints)
        </td>
        <td></td>
               <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td></td>
       <td>
       <img src="@Url.Action("getImg", "RewardAccount", new { id = item.Company.CompanyID })" width="50" height="40" alt="CompanyLogo" />
        </td>
        <td></td>
        <td>
            @Html.ActionLink("Collect Points", "Edit", new { id=item.RewardAccountID }) |
            @Html.ActionLink("Remove Account", "Delete", new { id = item.RewardAccountID })
        </td>
    </tr>
}

</table>
